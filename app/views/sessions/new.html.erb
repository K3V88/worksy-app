<div class="login-container">
  <h1><%= t("Welcome Back!") %></h1>

  <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |form| %>
    <div class="form-group">
      <%= form.label :email, t("login.email") %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password, t("login.password") %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="form-actions">
      <%= form.submit t("login.submit"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <p class="signup-link">
    <%= t("login.no_account? ") %>
    <%= link_to t("login.signup_here"), signup_path %>
  </p>
</div>
