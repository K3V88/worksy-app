<div class="job-ad d-flex flex-column" style="padding-bottom: 1rem; height: auto; overflow: hidden;">
  <h1 class="mb-4 text-center">Edit Job</h1>

  <%= form_with(model: @job, local: true, html: { class: "d-flex flex-column flex-grow-1" }) do |form| %>
    <% if @job.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
        <ul>
          <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3 custom-width">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control custom-width" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 5, class: "form-control custom-width" %>
    </div>

    <div class="mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :hourly_price, class: "form-label" %>
      <%= form.number_field :hourly_price, step: 0.01, class: "form-control", placeholder: "Hourly Price" %>
    </div>
    <div class="mb-3">
      <%= form.label :price_per_m2, class: "form-label" %>
      <%= form.number_field :price_per_m2, step: 0.01, class: "form-control", placeholder: "Price per mÂ²" %>
    </div>
    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <!-- Button container at bottom -->
    <div class="mt-auto d-flex flex-column gap-2">
      <%= form.submit 'Update Job', class: "btn btn-primary" %>
      <%= link_to 'Back to Job', job_path(@job), class: "btn btn-outline-secondary" %>
      <%= link_to 'Back to Job Listings', jobs_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
