<h1><%= @job.title %></h1>
<p><%= @job.description %></p>
<p>Posted by <%= @job.user.name %></p>

<% if current_user == @job.user %>
  <%= link_to 'Edit', edit_job_path(@job) %> |
  <%= link_to 'Delete', @job, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back to Job Listings', jobs_path %>
